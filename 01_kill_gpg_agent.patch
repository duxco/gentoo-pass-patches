+
+if GPG_AGENT_PID="$(pidof gpg-agent)"; then
+
+  if [ "${PASS_RETAIN_AGENT}" == "true" ]; then
+    cat >&2 <<EOF
+  __________________
+< gpg-agent running! >
+  ------------------
+         \   ^__^
+          \  (oo)\_______
+             (__)\       )\/\\
+                 ||----w |
+                 ||     ||
+EOF
+    exit 0
+  fi
+
+  gpgconf --kill gpg-agent
+  echo -n -e "\nWaiting for gpg-agent to stop..." >&2
+  tail --pid="${GPG_AGENT_PID}" -f /dev/null
